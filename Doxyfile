# Doxygen configuration for yai-law

PROJECT_NAME           = "yai-law"
OUTPUT_DIRECTORY       = dist/docs
GENERATE_HTML          = YES
HTML_OUTPUT            = doxygen
GENERATE_LATEX         = NO
EXTRACT_ALL            = YES
WARN_IF_UNDOCUMENTED   = YES
QUIET                  = NO
RECURSIVE              = YES
FILE_PATTERNS          = *.h *.md *.json

# Inputs (Law v2 canonical)
INPUT                  = law \
                         formal \
                         vectors \
                         docs \
                         README.md \
                         SPEC_MAP.md \
                         REGISTRY.md \
                         VERSIONING.md \
                         docs/C_MAINPAGE.md

# Exclusions (optional but keeps noise down)
EXCLUDE                = dist \
                         .git \
                         target \
                         node_modules

# Markdown
MARKDOWN_SUPPORT       = YES
USE_MDFILE_AS_MAINPAGE = docs/C_MAINPAGE.md

# Output layout
GENERATE_TREEVIEW      = YES
